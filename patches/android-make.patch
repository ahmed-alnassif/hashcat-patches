 UNAME                   := $(shell uname -s)
 
+# Detect Android
+ANDROID_DETECT := $(findstring Android,$(shell uname -a))
+ifneq (,$(ANDROID_DETECT))
+  UNAME                   := Android
+endif
+
 # we need to strip the windows version number to be able to build hashcat on cygwin hosts
 UNAME                   := $(patsubst CYGWIN_NT-%,CYGWIN,$(UNAME))
 
@@ -35,7 +41,7 @@
